function [ par ] = setpar( D, priors, info )

smallnum = 1e-4;

minD = min(min(D));
maxD = max(max(D));
rangeD = maxD-minD;
%%maxPrec = 10/rangeD;

par.mship = rand(size(priors.mship));

par.mumean = rangeD * rand(length(info.Tdat),info.G) + minD;
par.muprec = repmat(smallnum,length(info.Tdat),info.G); %maxPrec * rand(info.Tmax+1,info.G);

par.Lshape = priors.Lshape; %maxPrec * rand(size(priors.Lshape));
par.Lscale = priors.Lscale; %maxPrec * rand(size(priors.Lscale));

%%par.Smean = eye(info.nclus); %% .* (rand(info.nclus) - 0.5);
par.Smean = ones(info.nclus) .* (rand(info.nclus) - 0.5);
for i = 1:info.nclus
  par.Sprec{i} = eye(info.nclus);
end

%% par.SmeanMiddleGuymean = 2 * rand(info.nclus) - 1;
%% par.SmeanMiddleGuyprec = maxPrec * rand(info.nclus);
%% par.SmeanHYPmean = 2 * rand(1) - 1;
%% par.SmeanHYPprec = maxPrec * rand(1);
%% par.SmeanHYPdoublePRECshape = maxPrec * rand(1);
%% par.SmeanHYPdoublePRECscale = maxPrec * rand(1);
%% par.SprecHYPshape = maxPrec * rand(size(priors.SprecHYPshape));
%% par.SprecHYPscale = maxPrec * rand(size(priors.SprecHYPscale));
par.Sconstmean = 0*(rangeD * rand(info.nclus,1) - 0.5*rangeD);
par.Sconstprec = smallnum*ones(info.nclus,1); %)maxPrec * rand(info.nclus,1);

% the multivariate Gaussian cluster centers
% for Fmean, add T+1 for convenience; it stays zero
par.Fmean = rangeD * (rand(info.nclus,info.Tmax+1)) + minD;
par.Fprec = {};
for t = 1:info.Tmax+1
    par.Fprec{t} = priors.Fprec1;
end

% the parameters of the precisions of the multivariate Gaussian clusters
par.gamshape = repmat( smallnum, info.nclus, length(info.Tdat) ); 
par.gamscale = ones(size(par.gamshape));

% the hyperparameters of the beta/scale on the gamma dist of par.gam
par.gamscaleHYPshape = smallnum;
par.gamscaleHYPscale = smallnum;

par.SIGscaleHYPshape = smallnum;
par.SIGscaleHYPscale = smallnum;

par.SIGshape = repmat(smallnum^2,1,info.nclus);
par.SIGscale = repmat(1,1,info.nclus);

end